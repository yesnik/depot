.depot_form
  - if flash[:alert]
    %p#notice= flash[:alert]
= form_tag do
  %fieldset
    %div
      %legend Зарегистрируйтесь, пожалуйста
      = label_tag :name, 'Имя:'
      = text_field_tag :name, params[:name]
    %div
      = label_tag :password, 'Пароль:'
      = password_field_tag :password, params[:password]
    %div
      = submit_tag "Login"
